{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"rootDirs": [
      		"./src/"
    	],
	},
	"include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
